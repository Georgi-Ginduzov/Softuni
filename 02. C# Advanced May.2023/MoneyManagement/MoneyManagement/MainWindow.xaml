<Window x:Class="MoneyManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="467" Width="840">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar-->
        <Rectangle Grid.Row="0" Fill="Red"/>
        <!-- Content Bar-->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Fill="Blue"></Rectangle>
            <Rectangle Grid.Column="1" Fill="YellowGreen"></Rectangle>
            <Rectangle Grid.Column="2" Fill="Orange"></Rectangle>

            <Button>
                <Button.Content>
                    Menu
                </Button.Content>
                <ButtonBase.Click>
                </ButtonBase.Click>
            </Button>
        </Grid>

        <!-- Footer -->
        
    </Grid>

</Window>
